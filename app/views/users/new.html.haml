.container
  .jumbotron
    = form_for @user do |f|
      .form-group.label-floating
        = f.label :username
        = f.text_field :username, class: 'form-control'
        %p.help-block Maybe the only chance to choose something cool
      .form-group.label-floating
        = f.label :password
        = f.password_field :password, class: 'form-control'
        %p.help-block
          The password is displayed and transferred in plain text. (of course not)
      .form-group.label-floating
        = f.label :email
        = f.email_field :email, class: 'form-control'
        %p.help-block
          Some day I will start sending you spam.
      .form-group.label-floating
        = f.label :paypal_url
        = f.url_field :paypal_url, value: 'https://paypal.me/', class: 'form-control'
        %p.help-block
          This URL is used to link your account members to your payment site.
          Please use the following synatx:
          %b https://paypal.me/phpsucks
      = f.submit

:javascript
  $('#user_username').on('input', function(){
    var val = $('#user_username').val();
    $('#user_paypal_url').val("https://paypal.me/"+val);

  });
